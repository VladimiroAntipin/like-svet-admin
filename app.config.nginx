# Server block per admin.likesvet.com â€” proxy verso app locale su 127.0.0.1:3000

upstream backend_admin_likesvet {
    server 127.0.0.1:3000;   # <-- cambia qui se il CMS/app gira su altra porta/ip
    # puoi aggiungere altri server per load balancing
}

server {
    listen 443 ssl http2;
    server_name admin.likesvet.com;

    # Certbot / Let's Encrypt
    ssl_certificate /etc/letsencrypt/live/admin.likesvet.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/admin.likesvet.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    # --- Location per API: gestisce preflight OPTIONS e aggiunge header CORS alle risposte proxyate
    location ~ ^/api/ {
        # Preflight
        if ($request_method = OPTIONS) {
            add_header 'Access-Control-Allow-Origin' $cors_allow_origin always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS, PATCH' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-Requested-With, Accept' always;
            add_header 'Access-Control-Allow-Credentials' 'true' always;
            add_header 'Vary' 'Origin' always;
            add_header 'Cache-Control' 'no-store' always;
            return 204;
        }
        # Proxy verso backend
        proxy_pass http://backend_admin_likesvet;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;

        # Aggiungi header CORS sulle risposte
        add_header 'Access-Control-Allow-Origin' $cors_allow_origin always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS, PATCH' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-Requested-With, Accept' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
        add_header 'Vary' 'Origin' always;
        add_header 'Cache-Control' 'no-store' always;

        proxy_read_timeout 90;
        proxy_connect_timeout 10;
        proxy_redirect off;

        # Se vuoi forzare SameSite=None; Secure sui cookie (se nginx supporta proxy_cookie_flags)
        # decommenta e sostituisci "session_cookie_name" con il nome reale del cookie.
        # proxy_cookie_flags session_cookie_name secure samesite=None;
    }
    # --- Tutte le altre richieste (SPA, websocket ecc.)
    location / {
        proxy_pass http://backend_admin_likesvet;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

        # opzionale: se vuoi esporre CORS qui anch'esso
        # add_header 'Access-Control-Allow-Origin' $cors_allow_origin always;
        # add_header 'Access-Control-Allow-Credentials' 'true' always;
    }

    access_log /var/log/nginx/admin_likesvet.access.log;
    error_log /var/log/nginx/admin_likesvet.error.log;
}

# Redirect HTTP -> HTTPS gestito da Certbot
server {
    listen 80;
    server_name admin.likesvet.com;

    if ($host = admin.likesvet.com) {
        return 301 https://$host$request_uri;
    }

    return 404;
}

